                    <span class="logo-sm">
                        <img src="~/assetsNew/images/logo.svg" alt="" height="22">
                    </span>
                    <span class="logo-lg">
                        <img src="~/assetsNew/images/logo-dark.png" alt="" height="17">
                    </span>
                </a>
                <a href="@Url.Action("Index","Home")" class="logo logo-light">
                    <span class="logo-sm">
                        <img src="~/assetsNew/images/logo-light.svg" alt="" height="22">
                    </span>
                    <span class="logo-lg">
                        <img src="~/assetsNew/images/logo-light.png" alt="" height="19">
                    </span>
                </a>
            </div>

            <button type="button" class="btn btn-sm px-3 font-size-16 header-item waves-effect" id="vertical-menu-btn">
